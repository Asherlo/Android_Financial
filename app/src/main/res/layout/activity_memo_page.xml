<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MemoPage">
    // 备忘录
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#4c80e9"
        >
        <!--        返回-->
        <ImageView
            android:id="@+id/fanhhuu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/kakalib_top_nav_back_click"
            />
        <!--        关于文字-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="备忘录"
            android:textSize="20dp"
            android:textColor="#fff"
            android:layout_centerVertical="true"
            android:layout_centerInParent="true"
            />
        <!--        添加-->
        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:alpha="70"
            android:paddingRight="10dp"
            android:id="@+id/mBtnAdd"
            android:background="@drawable/img_trade_image_add"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>
    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/lv_note"/>
</LinearLayout>